<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= course.title %> - LearnIT</title>
</head>
<body style="background-color: #F6F7F8;">
    <%- include('partials/header') %>

    <main class="course-details">
        <section class="course-header">
            <h1><%= course.title %></h1>
            <p class="course-description"><%= course.description %></p>
        </section>

        <section class="course-info">
            <p><%= course.topic %></p>

            <div class="course-tags">
                <% if (course.technology && course.technology.length > 0) { %>
                    <% course.technology.forEach(tech => { %>
                        <span class="tag" style="background-color: #E0F2FE;"><%= tech %></span>
                    <% }) %>
                <% } %>
            
                <% if (course.exercises) { %>
                    <span class="tag" style="background-color: #E0F2FE;"><%= course.exercises %> Exercises</span>
                <% } %>
            
                <% if (course.videos) { %>
                    <span class="tag" style="background-color: #E0F2FE;"><%= course.videos %> Videos</span>
                <% } %>
            </div>
        </section>          
            
        <section class="enroll-redirect">
            <button
                onclick="window.location.href='/enroll/<%= course.id %>'"
                class="btn solid purple">
                Start
            </button>
        </section> 

        <%- include('partials/what_learn', { whatLearn: course.whatLearn }) %>

        <section class="course-stats" style="background-color: #FFFFFF;">
            <div class="col">
                <img src="/time.png" alt="Duration">
                <span><%= course.duration %></span>
            </div>
            
            <div class="col">
                <span><%= course.rating %>‚≠ê</span>
            </div>
            
            <div class="col">
                <img src="/level.png" alt="Level">
                <span><%= course.level %></span>
            </div>
            
            <div class="col">
                <span>&lt;&gt; <%= course.lessons %> lessons</span>
            </div>
        </section>             
    </main>

    <%- include('partials/footer') %>
</body>
</html>