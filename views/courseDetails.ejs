<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/main.css">
    <title><%= course.title %> - LearnIT</title>
</head>
<body>
    <%- include('partials/header') %>

    <main class="course-details">
        <section class="course-header">
            <h1><%= course.title %></h1>
            <p><%= course.description %></p>
        </section>

        <section class="course-info">

            <div class="course-tags">
                <span class="tag""><%= course.topic %></span>

                <% if (course.technology && course.technology.length > 0) { %>
                    <% course.technology.forEach(tech => { %>
                        <span class="tag""><%= tech %></span>
                    <% }) %>
                <% } %>
            
                <% if (course.exercises) { %>
                    <span class="tag""><%= course.exercises %> Exercises</span>
                <% } %>
            
                <% if (course.videos) { %>
                    <span class="tag""><%= course.videos %> Videos</span>
                <% } %>
            </div>
        </section>          
            
        <section class="enroll-redirect">
            <button class="btn start" 
                    onclick="window.location.href='/enroll/<%= course.id %>'">
                Start
            </button>
        </section>                                        

        <section class="what-learn">
            <%- include('partials/what_learn', { whatLearn: course.whatLearn }) %>
        </section> 

        <!-- course-details.ejs -->
        <section class="course-stats">
            <div class="col">
                <img src="/time.png" alt="Duration">
                <span><%= course.duration %></span>
            </div>
            
            <div class="col">
                <span id="likes-<%= course.id %>"><%= course.likes || 0 %></span>
                <button class="like-btn" data-id="<%= course.id %>">‚ù§</button>
            </div>
            
            
            <div class="col">
                <img src="/level.png" alt="Level">
                <span><%= course.level %></span>
            </div>
            
            <div class="col">
                <span>&lt;&gt; <%= course.lessons %> lessons</span>
            </div>
        </section>
        
    </main>

    <%- include('partials/footer') %>       
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script type="module" src="/js/LikeService.js"></script>
    <script type="module" src="/js/main.js"></script>
</body>
</html>